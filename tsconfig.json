{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": false,
        "outDir": "dist",
        "rootDir": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "skipDefaultLibCheck": true,
        "declaration": true,
        "pretty": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "lib": [
            "es6",
            "es2017.object"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "@types",
        "tests",
        "examples"
    ]
}
